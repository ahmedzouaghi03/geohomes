{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}